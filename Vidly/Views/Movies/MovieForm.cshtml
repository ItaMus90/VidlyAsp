@model  Vidly.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = Model.Title;
    
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(v => v.Movie.Name)
        @Html.TextBoxFor(v => v.Movie.Name, new { @class="form-control"})
    </div>
    <div class="form-group">
        <label for="Movie_ReleaseDate">Release Date</label>
        @Html.TextBoxFor(v => v.Movie.ReleaseDate, "{0:d MMM yyyy}" , new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Movie_GenreId">Genre</label>
        @Html.DropDownListFor(v => v.Movie.GenreId, new SelectList (Model.Genres,"Id","Name" ), "" ,new { @class = "form-control" })

    </div>
    <div class="form-group">
        <label for="Movie_NumberInStock">Number In Stock</label>
        @Html.TextBoxFor(v => v.Movie.NumberInStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(v => v.Movie.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}